<h1>Listing enrollments</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th>Grade</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.student_id %></td>
        <td><%= enrollment.course_id %></td>
        <td><%= enrollment.grade %></td>
        <td><%= link_to 'Show', enrollment, class: "btn btn-small" %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment), class: "btn btn-small" %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_enrollment_path, class: "btn" %>
